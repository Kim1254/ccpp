<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/fragLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/style_footer"
        android:orientation="horizontal">

        <Button
            android:id="@+id/footer_lecture"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/ic_home"
            android:text="@string/MainActivity_Footer_Lecture"
            android:textSize="11sp"
            android:drawableTint="@color/gcc_navy"
            android:textColor="@color/gcc_navy"/>

        <Button
            android:id="@+id/footer_schedule"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/ic_canlander"
            android:text="@string/MainActivity_Footer_Schedule"
            android:textSize="11sp"
            android:drawableTint="@color/gcc_navy"
            android:textColor="@color/gcc_navy" />

        <Button
            android:id="@+id/footer_alarm"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/ic_bell"
            android:text="@string/MainActivity_Footer_Alarm"
            android:textSize="11sp"
            android:drawableTint="@color/gcc_navy"
            android:textColor="@color/gcc_navy" />

        <Button
            android:id="@+id/footer_chat"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/ic_comments"
            android:text="@string/MainActivity_Footer_Chat"
            android:textSize="11sp"
            android:drawableTint="@color/gcc_navy"
            android:textColor="@color/gcc_navy" />

        <Button
            android:id="@+id/footer_setting"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/ic_setting"
            android:text="@string/MainActivity_Footer_Setting"
            android:textSize="11sp"
            android:drawableTint="@color/gcc_navy"
            android:textColor="@color/gcc_navy" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
